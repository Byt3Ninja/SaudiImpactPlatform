# Environment Configuration
NODE_ENV=production

# Server Configuration
PORT=5000

# PostgreSQL Database Configuration
PGHOST=postgres
PGPORT=5432
PGUSER=postgres
PGPASSWORD=your_secure_postgres_password_here
PGDATABASE=saudi_impact

# Database URL (automatically constructed from above, or provide full URL)
DATABASE_URL=postgresql://postgres:your_secure_postgres_password_here@postgres:5432/saudi_impact

# Session Configuration
# Generate a strong random string for production
# Example: openssl rand -base64 32
SESSION_SECRET=your_very_secure_session_secret_at_least_32_characters_long

# Admin Configuration
# Password for admin panel access
ADMIN_PASSWORD=your_secure_admin_password_here

# Optional: Application Configuration
# TRUST_PROXY=true  # Enable if behind reverse proxy (nginx, cloudflare, etc.)
