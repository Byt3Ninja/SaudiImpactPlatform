# ===========================================
# Saudi Impact Platform - Production Environment
# ===========================================
# IMPORTANT: Copy this file to .env.production and fill in actual values
# Never commit .env.production to version control!

# Database Configuration
PGHOST=postgres
PGPORT=5432
PGUSER=saudi_impact_user
PGPASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD
PGDATABASE=saudi_impact_prod

# Application Configuration
NODE_ENV=production
PORT=5000

# Security
SESSION_SECRET=CHANGE_THIS_TO_RANDOM_STRING_AT_LEAST_32_CHARS
ADMIN_PASSWORD=CHANGE_THIS_TO_SECURE_ADMIN_PASSWORD

# Database URL (auto-constructed from above)
DATABASE_URL=postgresql://${PGUSER}:${PGPASSWORD}@${PGHOST}:${PGPORT}/${PGDATABASE}
