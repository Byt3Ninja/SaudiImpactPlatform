# ===========================================
# Saudi Impact Platform - Production Environment
# ===========================================
# IMPORTANT: Copy this file to .env.production and fill in actual values
# Never commit .env.production to version control!

# Database Configuration
PGHOST=postgres
PGPORT=5432
PGUSER=postgres
PGPASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD
PGDATABASE=saudi_impact

# Application Configuration
NODE_ENV=production
PORT=5000

# Security
SESSION_SECRET=CHANGE_THIS_TO_RANDOM_STRING_AT_LEAST_32_CHARS
ADMIN_PASSWORD=CHANGE_THIS_TO_SECURE_ADMIN_PASSWORD

# Database URL - IMPORTANT: Replace YOUR_PASSWORD with actual PGPASSWORD value above!
# DO NOT use ${PGPASSWORD} - Docker .env files don't support variable expansion
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@postgres:5432/saudi_impact
